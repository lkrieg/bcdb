#!/bin/sh

# TODO: Check if pthread is found in the searchpaths
# TODO: Check if zlib is found in the searchpaths
# TODO: Set correct defines in src/config.h

INFILE="src/config.h.in"

use_debug="no"
use_pthread="no"
use_zlib="no"

if test ! -f "$INFILE"; then
	echo "Error: Header '$INFILE' missing."
	exit 1
fi

read -p "Enable debug mode? [y/N] " debug
case "$debug" in
y|Y) use_debug="yes" ;;
*)   use_debug="no"  ;;
esac

echo "Checking for debug...$use_debug"
echo "Checking for pthread...$use_pthread"
echo "Checking for zlib...$use_zlib"
echo "Configuration finished."
